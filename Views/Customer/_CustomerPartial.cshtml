
@model IEnumerable<HotelApp.ViewModel.CustomerModel>

<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.CustomerId) </th>
            <th> @Html.DisplayNameFor(model => model.Name) </th>
            <th> @Html.DisplayNameFor(model => model.Mobile) </th>
            <th> @Html.DisplayNameFor(model => model.Email) </th>
            <th>
                <a onclick="showInPopup('@Url.Action("SaveCustomer", "Customer", null, Context.Request.Scheme)', 'New Customer')"
                   class="btn btn-success text-white">
                    Create New
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.CustomerId) </td>
                <td> @Html.DisplayFor(modelItem => item.Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Mobile) </td>
                <td> @Html.DisplayFor(modelItem => item.Email) </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("SaveCustomer", "Customer", new { id = item.CustomerId }, Context.Request.Scheme)', 'Update Customer')" class="btn btn-info text-white">
                        Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.CustomerId" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="DELETE" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

